<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox prefHeight="430.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.datathreadingapplication.Controllers.TableViewController">

    <children>

        <!-- Left side -->
        <VBox prefHeight="430.0" prefWidth="909.0" spacing="10.0">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>

            <children>

                <TableView fx:id="tableView" prefHeight="410.0" prefWidth="810.0" VBox.vgrow="ALWAYS">
                    <columns>
                        <TableColumn fx:id="idCol" prefWidth="48.0" text="Id" />
                        <TableColumn fx:id="firstNameCol" prefWidth="105.0" text="First name" />
                        <TableColumn fx:id="lastNameCol" prefWidth="122.0" text="Last name" />
                        <TableColumn fx:id="emailCol" prefWidth="117.0" text="Email" />
                        <TableColumn fx:id="genderCol" prefWidth="117.0" text="Gender" />
                        <TableColumn fx:id="countryCol" prefWidth="117.0" text="Country" />
                        <TableColumn fx:id="domainCol" prefWidth="117.0" text="Domain" />
                        <TableColumn fx:id="birthDateCol" prefWidth="145.0" text="Birth date" />
                    </columns>
                </TableView>
            </children>
        </VBox>

        <!-- Right sidebar -->
        <VBox alignment="TOP_CENTER" prefWidth="150" spacing="10" style="-fx-background-color:#f0f0f0;">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <children>
            <Label text="Start date">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <DatePicker fx:id="startDate" />
            <Label text="End date">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <DatePicker fx:id="endDate" />
                <Button onAction="#prepareData" text="Filter" />
            <Label text="Sort by">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <ChoiceBox fx:id="sortBy" onAction="#prepareData" prefWidth="150.0" />
            <ChoiceBox fx:id="sortingCriteria" onAction="#prepareData" prefWidth="150.0" />
                <Button maxWidth="Infinity" onAction="#removeFilters" text="Remove filters">
               <VBox.margin>
                  <Insets top="30.0" />
               </VBox.margin></Button>
            </children>
        </VBox>

    </children>

</HBox>
